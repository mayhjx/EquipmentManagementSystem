@page
@model EquipmentManagementSystem.Areas.Identity.Pages.Account.UserManagement.CreateModel
@{
    ViewData["Title"] = "新建用户";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <form method="post" role="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Group" class="control-label"></label>
                        <select asp-for="Input.Group" asp-items="@Model.Groups" class="custom-select">
                            <option value="" selected="selected">无</option>
                        </select>
                        <span asp-validation-for="Input.Group" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Name" class="control-label"></label>
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Number" class="control-label"></label>
                        <input asp-for="Input.Number" class="form-control" />
                        <span asp-validation-for="Input.Number" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="control-label"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Role" class="control-label"></label>
                        <select asp-for="Input.Role" asp-items="@Model.Input.Roles" class="custom-select">
                        </select>
                        <span asp-validation-for="Input.Role" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <span class="text-sm">提示：由小写字母和数字组成，最少6个字符。</span>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="新建" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">返回</a>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}