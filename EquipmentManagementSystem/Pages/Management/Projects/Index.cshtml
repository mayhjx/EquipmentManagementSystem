@page
@model EquipmentManagementSystem.Pages.Management.Projects.IndexModel

@{
    ViewData["Title"] = "后台管理";
}

<div class="card">
    <h4 class="card-header">
        项目
        <a asp-page="Create">
            <input type="button" class="btn btn-outline-primary btn-sm" value="新建" style="margin-left: 10px;" />
        </a>
    </h4>
    <div class="card-body">
        <table id="index" class="table table-sm text-nowrap">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Project[0].GroupName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Project[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Project[0].ShortName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Project[0].SimpleTestTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Project[0].ColumnType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Project[0].MobilePhase)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Project[0].IonSource)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Project[0].Detector)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Project)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShortName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SimpleTestTime)
                    </td>
                    <td>
                        <list list="item.GetColumnType()" />
                    </td>
                    <td>
                        <list list="item.GetMobilePhase()" />
                    </td>
                    <td>
                        <list list="item.GetIonSource()" />
                    </td>
                    <td>
                        <list list="item.GetDetector()" />
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">编辑</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">删除</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
