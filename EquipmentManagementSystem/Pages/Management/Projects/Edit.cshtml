@page
@model EquipmentManagementSystem.Pages.Management.Projects.EditModel

@{
    ViewData["Title"] = "编辑";
}

<div class="card">
    <div class="card-header">
        检测项目
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Project.Id" />
                    <div class="form-group">
                        <label asp-for="Project.GroupName" class="control-label"></label>
                        <select asp-for="Project.GroupName" class="custom-select" asp-items="@Model.GroupSelectList">
                        </select>
                        <span asp-validation-for="Project.GroupName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Project.Name" class="control-label"></label>
                        <input asp-for="Project.Name" class="form-control" />
                        <span asp-validation-for="Project.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Project.ShortName" class="control-label"></label>
                        <input asp-for="Project.ShortName" class="form-control" />
                        <span asp-validation-for="Project.ShortName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Project.SimpleTestTime" class="control-label"></label>
                        <input asp-for="Project.SimpleTestTime" step="1" class="form-control" />
                        <span asp-validation-for="Project.SimpleTestTime" class="text-danger"></span>
                    </div>
                    <span class="text-sm text-gray">备注：以下内容根据实际情况填写。</span>
                    <hr />
                    <div class="form-group">
                        <label asp-for="Project.ColumnType" class="control-label"></label>
                        <input asp-for="Project.ColumnType" class="form-control" />
                        <span asp-validation-for="Project.ColumnType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Project.MobilePhase" class="control-label"></label>
                        <input asp-for="MobilePhases[0]" class="form-control" placeholder="Pump A" />
                        <input asp-for="MobilePhases[1]" class="form-control" placeholder="Pump B" />
                        <input asp-for="MobilePhases[2]" class="form-control" placeholder="Pump C" />
                        <input asp-for="MobilePhases[3]" class="form-control" placeholder="Pump D" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Project.CarrierGas" class="control-label"></label>
                        <input asp-for="Project.CarrierGas" class="form-control" />
                        <span asp-validation-for="Project.CarrierGas" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Project.IonSource" class="control-label"></label>
                        <input asp-for="Project.IonSource" class="form-control" />
                        <span asp-validation-for="Project.IonSource" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Project.Detector" class="control-label"></label>
                        <input asp-for="Project.Detector" class="form-control" />
                        <span asp-validation-for="Project.Detector" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="保存" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="./Index">返回</a>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
