@page
@model EquipmentManagementSystem.Pages.Components.DeleteModel

@{
    ViewData["Title"] = "删除";
}

<div class="card">
    <div class="card-header text-danger">
        <h4>确认删除？</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Component.InstrumentID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Component.InstrumentID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Component.SerialNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Component.SerialNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Component.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Component.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Component.Model)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Component.Model)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Component.Brand)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Component.Brand)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Component.ID" />
            <input type="submit" value="删除" class="btn btn-danger" /> |
            <a asp-page="../Instruments/Details" asp-route-id="@Model.Component.InstrumentID">返回</a>
        </form>
    </div>
</div>
