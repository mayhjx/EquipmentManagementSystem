@page
@inject UserManager<User> UserManager
@model EquipmentManagementSystem.Pages.DailyUsageRecord.CreateModel

@{
    ViewData["Title"] = "新建使用记录";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.InstrumentId" class="control-label"></label>
                        <select asp-for="UsageRecord.InstrumentId" class="form-control" asp-items="ViewBag.InstrumentId" required>
                            <option></option>
                        </select>
                        <span asp-validation-for="UsageRecord.InstrumentId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.ProjectName" class="control-label"></label>
                        <select asp-for="UsageRecord.ProjectName" class="form-control" asp-items="ViewBag.Project" required>
                            <option></option>
                        </select>
                        <span asp-validation-for="UsageRecord.ProjectName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.BeginTime" class="control-label"></label>
                        <input asp-for="UsageRecord.BeginTime" class="form-control" />
                        <span asp-validation-for="UsageRecord.BeginTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.EndTime" class="control-label"></label>
                        <input asp-for="UsageRecord.EndTime" class="form-control" />
                        <span asp-validation-for="UsageRecord.EndTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.SampleNumber" class="control-label"></label>
                        <input asp-for="UsageRecord.SampleNumber" class="form-control" />
                        <span asp-validation-for="UsageRecord.SampleNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.TestTime" class="control-label"></label>
                        <input asp-for="UsageRecord.TestTime" class="form-control" />
                        <span asp-validation-for="UsageRecord.TestTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.Creator" class="control-label"></label>
                        <input asp-for="UsageRecord.Creator" class="form-control" value="@UserManager.GetUserAsync(User).Result?.Name" />
                        <span asp-validation-for="UsageRecord.Creator" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="新建" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">返回</a>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
