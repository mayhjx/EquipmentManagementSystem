@page
@model EquipmentManagementSystem.Pages.Management.MalfunctionReasons.CreateModel

@{
    ViewData["Title"] = "新建";
}

<div class="card">
    <div class="card-header">
        故障原因
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="MalfunctionReason.Reason" class="control-label"></label>
                        <input asp-for="MalfunctionReason.Reason" class="form-control" />
                        <span asp-validation-for="MalfunctionReason.Reason" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="新建" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">返回</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
