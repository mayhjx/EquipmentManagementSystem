@page
@model EquipmentManagementSystem.Pages.Management.MaintenanceTypes.CreateModel

@{
    ViewData["Title"] = "新建";
}

<div class="card">
    <h4 class="card-header">
        维护类型
    </h4>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <form method="post" id="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="MaintenanceType.InstrumentPlatform" class="control-label"></label>
                        <input asp-for="MaintenanceType.InstrumentPlatform" class="form-control" />
                        <span asp-validation-for="MaintenanceType.InstrumentPlatform" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaintenanceType.Type" class="control-label"></label>
                        <input asp-for="MaintenanceType.Type" class="form-control" />
                        <span asp-validation-for="MaintenanceType.Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaintenanceType.Cycle" class="control-label"></label>
                        <input asp-for="MaintenanceType.Cycle" class="form-control" />
                        <span asp-validation-for="MaintenanceType.Cycle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaintenanceType.RemindTime" class="control-label"></label>
                        <input asp-for="MaintenanceType.RemindTime" class="form-control" />
                        <span asp-validation-for="MaintenanceType.RemindTime" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MaintenanceType.Content" class="control-label"></label>
                        <input name="content" class="form-control" />
                    </div>

                    <button id="AddInput" class="btn btn-primary">Add</button>

                    <div class="form-group">
                        <input type="submit" value="新建" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">返回</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $('button#AddInput').click(function (e) {
            e.preventDefault();
            var input = '<div class="form-group"><input name="content" class="form-control" /></div>';
            $(this).before(input);
        });
    </script>
}
