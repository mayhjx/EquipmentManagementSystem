@page
@model EquipmentManagementSystem.Pages.Management.Projects.DeleteModel

@{
    ViewData["Title"] = "删除项目";
}

<div class="card">
    <div class="card-header">
        <h3>确认删除？</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <dl class="row">
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Project.GroupId)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Project.Group.Name)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Project.Name)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Project.Name)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Project.SimpleTestTime)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Project.SimpleTestTime)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Project.ColumnType)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Project.ColumnType)
                    </dd>
                </dl>
            </div>
        </div>

        <form method="post">
            <input type="hidden" asp-for="Project.Id" />
            <input type="submit" value="删除" class="btn btn-danger" /> |
            <a asp-page="./Index">返回</a>
        </form>
    </div>
</div>