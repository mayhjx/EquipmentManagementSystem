@page
@model EquipmentManagementSystem.Pages.Management.Projects.DeleteModel

@{
    ViewData["Title"] = "删除项目";
}

<div class="card">
    <div class="card-header text-danger">
        <h4>确认删除？</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Project.GroupId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Project.Group.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Project.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Project.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Project.SimpleTestTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Project.SimpleTestTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Project.ColumnType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Project.ColumnType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Project.Carrier)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Project.Carrier)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Project.IonSource)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Project.IonSource)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Project.Detector)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Project.Detector)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Project.Id" />
            <input type="submit" value="删除" class="btn btn-danger" /> |
            <a asp-page="./Index">返回</a>
        </form>
    </div>
</div>
