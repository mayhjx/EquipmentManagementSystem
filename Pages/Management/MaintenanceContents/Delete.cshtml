@page
@model EquipmentManagementSystem.Pages.Management.MaintenanceContents.DeleteModel

@{
    ViewData["Title"] = "删除";
}

<div class="card">
    <div class="card-header text-danger">
        <h4>确认删除？</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MaintenanceContent.InstrumentPlatform)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaintenanceContent.InstrumentPlatform)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MaintenanceContent.Type)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaintenanceContent.Type)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MaintenanceContent.Text)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaintenanceContent.Text)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MaintenanceContent.Cycle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaintenanceContent.Cycle)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MaintenanceContent.RemindTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaintenanceContent.RemindTime)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="MaintenanceContent.Id" />
            <input type="submit" value="删除" class="btn btn-danger" /> |
            <a asp-page="./Index">返回</a>
        </form>
    </div>
</div>
