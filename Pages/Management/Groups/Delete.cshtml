@page
@model EquipmentManagementSystem.Pages.Management.Groups.DeleteModel

@{
    ViewData["Title"] = "删除项目组";
}

<div class="card">
    <div class="card-header">
        <h3>确认删除？</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Group.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Group.Name)
                    </dd>
                </dl>
            </div>
        </div>

        <form method="post">
            <input type="hidden" asp-for="Group.Id" />
            <a asp-page="./Index"><input type="button" value="返回" class="btn btn-default" /></a>
            <input type="submit" value="删除" class="btn btn-danger" />
        </form>
    </div>
</div>
