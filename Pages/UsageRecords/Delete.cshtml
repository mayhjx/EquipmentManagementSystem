        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UsageRecord.CreatedTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsageRecord.CreatedTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UsageRecord.InstrumentId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsageRecord.InstrumentId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UsageRecord.ProjectName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsageRecord.ProjectName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UsageRecord.BeginTimeOfMaintain)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsageRecord.BeginTimeOfMaintain)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UsageRecord.ColumnPressure)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsageRecord.ColumnPressure)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UsageRecord.BeginTimeOfTest)
            </dt>
