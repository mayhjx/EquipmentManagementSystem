            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UsageRecord.TestNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsageRecord.TestNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UsageRecord.EndTime)
            </dt>
            <dd class="col-sm-10">
