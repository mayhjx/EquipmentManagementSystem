@page
@inject UserManager<User> UserManager
@model EquipmentManagementSystem.Pages.UsageRecords.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.InstrumentId" class="control-label"></label>
                        <select asp-for="UsageRecord.InstrumentId" class="form-control" asp-items="ViewBag.InstrumentId">
                            <option></option>
                        </select>
                        <span asp-validation-for="UsageRecord.InstrumentId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.ProjectName" class="control-label"></label>
                        <select asp-for="UsageRecord.ProjectName" class="form-control" asp-items="ViewBag.Project" required>
                            <option></option>
                        </select>
                        <span asp-validation-for="UsageRecord.ProjectName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.BeginTimeOfMaintain" class="control-label"></label>
                        <input asp-for="UsageRecord.BeginTimeOfMaintain" class="form-control" />
                        <span asp-validation-for="UsageRecord.BeginTimeOfMaintain" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.ColumnPressure" class="control-label"></label>
                        <input asp-for="UsageRecord.ColumnPressure" class="form-control" />
                        <span asp-validation-for="UsageRecord.ColumnPressure" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.BeginTimeOfTest" class="control-label"></label>
                        <input asp-for="UsageRecord.BeginTimeOfTest" class="form-control" />
                        <span asp-validation-for="UsageRecord.BeginTimeOfTest" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.SampleNumber" class="control-label"></label>
                        <input asp-for="UsageRecord.SampleNumber" class="form-control" />
                        <span asp-validation-for="UsageRecord.SampleNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.TestNumber" class="control-label"></label>
                        <input asp-for="UsageRecord.TestNumber" class="form-control" />
                        <span asp-validation-for="UsageRecord.TestNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.EndTime" class="control-label"></label>
                        <input asp-for="UsageRecord.EndTime" class="form-control" />
                        <span asp-validation-for="UsageRecord.EndTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.Creator" class="control-label"></label>
                        @{
                            var user = await UserManager.GetUserAsync(User);
                        }
                        <input asp-for="UsageRecord.Creator" value="@user.Name" class="form-control" />
                        <span asp-validation-for="UsageRecord.Creator" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="新建" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">返回</a>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
