@page
@inject UserManager<User> UserManager
@model EquipmentManagementSystem.Pages.UsageRecords.CreateModel

@{
    ViewData["Title"] = "新建";
}

<div class="card">
    <div class="card-header">
        <h4>使用登记</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.InstrumentId" class="control-label"></label>
                        <select id="instrumentId" asp-for="UsageRecord.InstrumentId" class="form-control select2" asp-items="@Model.InstrumentSelectList" required>
                            <option value="">---请选择---</option>
                        </select>
                        <span asp-validation-for="UsageRecord.InstrumentId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.ProjectName" class="control-label"></label>
                        <select id="project" asp-for="UsageRecord.ProjectName" class="form-control select2" required disabled>
                        </select>
                        <span asp-validation-for="UsageRecord.ProjectName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.BeginTimeOfMaintain" class="control-label"></label>
                        <input asp-for="UsageRecord.BeginTimeOfMaintain" class="form-control" />
                        <span asp-validation-for="UsageRecord.BeginTimeOfMaintain" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-link" id="showSystemOne">
                            <i class="fas fa-plus text-green" aria-hidden="true"></i>
                            输入色谱柱压力
                        </button>
                    </div>
                    <div class="form-group" id="systemOne" hidden>
                        <label asp-for="UsageRecord.ColumnPressure" class="control-label">系统一色谱柱编号/压力/单位</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <input asp-for="UsageRecord.ColumnNumber" class="form-control" placeholder="编号" />
                            </div>
                            <input asp-for="UsageRecord.ColumnPressure" class="form-control" placeholder="压力" />
                            <div class="input-group-append">
                                <select asp-for="UsageRecord.PressureUnit" class="custom-select" id="SystemOnePressureUnit">
                                    <option value="MPa">MPa</option>
                                    <option value="Psi">Psi</option>
                                    <option value="Bar">Bar</option>
                                </select>
                            </div>
                        </div>
                        <span asp-validation-for="UsageRecord.ColumnPressure" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-link" id="showSystemTwo" hidden>
                            <i class="fas fa-plus text-green" aria-hidden="true"></i>
                            增加系统二
                        </button>
                    </div>
                    <div class="form-group" id="systemTwo" hidden>
                        <label asp-for="UsageRecord.ColumnTwoPressure" class="control-label">系统二色谱柱编号/压力/单位</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <input asp-for="UsageRecord.ColumnTwoNumber" class="form-control" placeholder="编号" />
                            </div>
                            <input asp-for="UsageRecord.ColumnTwoPressure" class="form-control" placeholder="压力" />
                            <div class="input-group-append">
                                <select class="custom-select" id="SystemTwoPressureUnit">
                                </select>
                            </div>
                        </div>
                        <span asp-validation-for="UsageRecord.ColumnTwoPressure" class="text-danger"></span>
                    </div>

                    @*<div class="form-group">
                            <label asp-for="UsageRecord.ColumnTwoNumber" class="control-label"></label>
                            <input asp-for="UsageRecord.ColumnTwoNumber" class="form-control" />
                            <span asp-validation-for="UsageRecord.ColumnTwoNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UsageRecord.ColumnTwoPressure" class="control-label"></label>
                            <div class="input-group">
                                <input asp-for="UsageRecord.ColumnTwoPressure" class="form-control" />
                                <div class="input-group-append">
                                    <select asp-for="UsageRecord.PressureUnit" class="custom-select">
                                        <option value="MPa">MPa</option>
                                        <option value="Psi">Psi</option>
                                        <option value="Bar">Bar</option>
                                    </select>
                                </div>
                            </div>
                            <span asp-validation-for="UsageRecord.ColumnTwoPressure" class="text-danger"></span>
                        </div>*@

                    <div class="form-group">
                        <label asp-for="UsageRecord.BeginTimeOfTest" class="control-label"></label>
                        <input asp-for="UsageRecord.BeginTimeOfTest" class="form-control" />
                        <span asp-validation-for="UsageRecord.BeginTimeOfTest" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.SampleNumber" class="control-label"></label>
                        <input asp-for="UsageRecord.SampleNumber" class="form-control" />
                        <span asp-validation-for="UsageRecord.SampleNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.TestNumber" class="control-label"></label>
                        <input asp-for="UsageRecord.TestNumber" class="form-control" />
                        <span asp-validation-for="UsageRecord.TestNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.EndTime" class="control-label"></label>
                        <input asp-for="UsageRecord.EndTime" class="form-control" />
                        <span asp-validation-for="UsageRecord.EndTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.Creator" class="control-label"></label>
                        @{
                            var user = await UserManager.GetUserAsync(User);
                        }
                        <input asp-for="UsageRecord.Creator" value="@user?.Name" class="form-control" required />
                        <span asp-validation-for="UsageRecord.Creator" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.Remark" class="control-label"></label>
                        <textarea asp-for="UsageRecord.Remark" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="UsageRecord.Remark" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="新建" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">返回</a>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            // 根据选择的设备编号动态生成检测项目
            $("#instrumentId").on("change", function () {
                var instrumentId = $(this).val();
                $("#project").removeAttr("disabled");
                $("#project").empty();
                $("#project").append("<option value=''>---请选择---</option>");
                $.getJSON(`?handler=ProjectFilter&instrumentId=${instrumentId}`, (data) => {
                    $.each(data, function (i, item) {
                        if (item.length > 0) {
                            $("#project").append(`<option value='${item}'>${item}</option>`);
                        }
                        else {
                            $("#project").empty();
                            $("#project").append("<option value=''>该设备未设置检测项目</option>");
                        }
                    });
                });
            });
        });

        $("button#showSystemOne").click(function (e) {
            // 显示系统一色谱柱压力输入框
            e.preventDefault();
            $("button#showSystemOne").attr("hidden", "");
            $("div#systemOne").removeAttr("hidden");
            $("button#showSystemTwo").removeAttr("hidden");
        })

        $("button#showSystemTwo").click(function (e) {
            // 显示系统二色谱柱压力输入框
            e.preventDefault();
            $("div#systemTwo").removeAttr("hidden");
            $("button#showSystemTwo").attr("hidden", "");
            // 系统二色谱柱压力单位与系统一同步
            var unit = $("select#SystemOnePressureUnit").val();
            $("select#SystemTwoPressureUnit").empty();
            $("select#SystemTwoPressureUnit").append(`<option>${unit}</option>`);
        })

        $("select#SystemOnePressureUnit").change(function () {
            // 更新系统二色谱柱压力单位
            var unit = $(this).val();
            $("select#SystemTwoPressureUnit").empty();
            $("select#SystemTwoPressureUnit").append(`<option>${unit}</option>`);
        })
    </script>
}
