@page
@model EquipmentManagementSystem.Pages.Records.UsageRecords.EditModel
@inject SignInManager<User> signInManager

@{
    ViewData["Title"] = "编辑";

    var HasSystemOne = Model.UsageRecord.ColumnPressure != null;
    var HasSystemTwo = Model.UsageRecord.ColumnTwoPressure != null;
}

<div class="card">
    <div class="card-header">
        <h4>使用记录</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12 col-xl-3">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UsageRecord.Id" />
                    <div class="form-group">
                        <label asp-for="UsageRecord.ProjectName" class="control-label"></label>
                        <input asp-for="UsageRecord.ProjectName" class="form-control" readonly>
                        <span asp-validation-for="UsageRecord.ProjectName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.InstrumentId" class="control-label"></label>
                        <input asp-for="UsageRecord.InstrumentId" class="form-control" readonly>
                        <span asp-validation-for="UsageRecord.InstrumentId" class="text-danger"></span>
                    </div>
                    @if (HasSystemOne)
                    {
                        <div class="form-group">
                            <label asp-for="UsageRecord.ColumnPressure" class="control-label">系统一色谱柱编号/压力/单位</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <input asp-for="UsageRecord.ColumnNumber" class="form-control" placeholder="编号" />
                                </div>
                                <input asp-for="UsageRecord.ColumnPressure" class="form-control" placeholder="压力" />
                                <div class="input-group-append">
                                    <select asp-for="UsageRecord.PressureUnit" class="custom-select" id="SystemOnePressureUnit" asp-items="@Html.GetEnumSelectList<PressureUnit>()">
                                    </select>
                                </div>
                            </div>
                            <span asp-validation-for="UsageRecord.ColumnPressure" class="text-danger"></span>
                        </div>

                        @if (HasSystemTwo)
                        {
                            <div class="form-group">
                                <label asp-for="UsageRecord.ColumnTwoPressure" class="control-label">系统二色谱柱编号/压力/单位</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <input asp-for="UsageRecord.ColumnTwoNumber" class="form-control" placeholder="编号" />
                                    </div>
                                    <input asp-for="UsageRecord.ColumnTwoPressure" class="form-control" placeholder="压力" />
                                    <div class="input-group-append">
                                        <select class="custom-select" id="SystemTwoPressureUnit">
                                        </select>
                                    </div>
                                </div>
                                <span asp-validation-for="UsageRecord.ColumnTwoPressure" class="text-danger"></span>
                            </div>
                        }
                        else
                        {
                            <div class="form-group">
                                <button class="btn btn-link" id="showSystemTwo">
                                    <i class="fa fa-plus text-green" aria-hidden="true"></i>
                                    输入系统二色谱柱压力
                                </button>
                            </div>
                            <div class="form-group" id="systemTwo" hidden>
                                <label asp-for="UsageRecord.ColumnTwoPressure" class="control-label">系统二色谱柱编号/压力/单位</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <input asp-for="UsageRecord.ColumnTwoNumber" class="form-control" placeholder="编号" />
                                    </div>
                                    <input asp-for="UsageRecord.ColumnTwoPressure" class="form-control" placeholder="压力" />
                                    <div class="input-group-append">
                                        <select class="custom-select" id="SystemTwoPressureUnit">
                                        </select>
                                    </div>
                                </div>
                                <span asp-validation-for="UsageRecord.ColumnTwoPressure" class="text-danger"></span>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="form-group">
                            <button class="btn btn-link" id="showSystemOne">
                                <i class="fa fa-plus text-green" aria-hidden="true"></i>
                                输入色谱柱压力
                            </button>
                        </div>
                        <div class="form-group" id="systemOne" hidden>
                            <label asp-for="UsageRecord.ColumnPressure" class="control-label">系统一色谱柱编号/压力/单位</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <input asp-for="UsageRecord.ColumnNumber" class="form-control" placeholder="编号" />
                                </div>
                                <input asp-for="UsageRecord.ColumnPressure" class="form-control" placeholder="压力" />
                                <div class="input-group-append">
                                    <select asp-for="UsageRecord.PressureUnit" class="custom-select" id="SystemOnePressureUnit">
                                        <option value="MPa">MPa</option>
                                        <option value="Psi">Psi</option>
                                        <option value="Bar">Bar</option>
                                    </select>
                                </div>
                            </div>
                            <span asp-validation-for="UsageRecord.ColumnPressure" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-link" id="showSystemTwo" hidden>
                                <i class="fa fa-plus text-green" aria-hidden="true"></i>
                                输入系统二色谱柱压力
                            </button>
                        </div>
                        <div class="form-group" id="systemTwo" hidden>
                            <label asp-for="UsageRecord.ColumnTwoPressure" class="control-label">系统二色谱柱编号/压力/单位</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <input asp-for="UsageRecord.ColumnTwoNumber" class="form-control" placeholder="编号" />
                                </div>
                                <input asp-for="UsageRecord.ColumnTwoPressure" class="form-control" placeholder="压力" />
                                <div class="input-group-append">
                                    <select class="custom-select" id="SystemTwoPressureUnit">
                                    </select>
                                </div>
                            </div>
                            <span asp-validation-for="UsageRecord.ColumnTwoPressure" class="text-danger"></span>
                        </div>
                    }
                    <div class="form-group">
                        <label asp-for="UsageRecord.BeginTimeOfTest" class="control-label"></label>
                        <input asp-for="UsageRecord.BeginTimeOfTest" class="form-control" />
                        <span asp-validation-for="UsageRecord.BeginTimeOfTest" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.SampleNumber" class="control-label"></label>
                        <input asp-for="UsageRecord.SampleNumber" class="form-control" />
                        <span asp-validation-for="UsageRecord.SampleNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.TestNumber" class="control-label"></label>
                        <input asp-for="UsageRecord.TestNumber" class="form-control" />
                        <span asp-validation-for="UsageRecord.TestNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.VacuumDegree" class="control-label">真空度大小/单位</label>
                        <div class="input-group">

                            <input asp-for="UsageRecord.VacuumDegree" class="form-control" />
                            <div class="input-group-append">
                                <select asp-for="UsageRecord.VacuumDegreeUnit" class="custom-select" asp-items="@Html.GetEnumSelectList<VacuumDegreeUnit>()">
                                </select>
                            </div>
                        </div>
                        <span asp-validation-for="UsageRecord.VacuumDegree" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.BlankSignal" class="control-label"></label>
                        <input asp-for="UsageRecord.BlankSignal" class="form-control" />
                        <span asp-validation-for="UsageRecord.BlankSignal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.TestSignal" class="control-label"></label>
                        <input asp-for="UsageRecord.TestSignal" class="form-control" />
                        <span asp-validation-for="UsageRecord.TestSignal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.EndTime" class="control-label"></label>
                        <input asp-for="UsageRecord.EndTime" class="form-control" />
                        <span asp-validation-for="UsageRecord.EndTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.Creator" class="control-label"></label>
                        <input asp-for="UsageRecord.Creator" class="form-control" readonly />
                        <span asp-validation-for="UsageRecord.Creator" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.Remark" class="control-label"></label>
                        <textarea asp-for="UsageRecord.Remark" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="UsageRecord.Remark" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="保存" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <a asp-page="../Index">返回</a>
                @if (signInManager.IsSignedIn(User) && (await AuthorizationService.AuthorizeAsync(User, Model.UsageRecord, Operations.Delete)).Succeeded)
                {
                    <a class="float-right" asp-page="./Delete" asp-route-id="@Model.UsageRecord.Id">删除</a>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Records.js" asp-append-version="true"></script>
}
