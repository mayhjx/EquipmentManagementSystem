@page
@model EquipmentManagementSystem.Pages.MaintenanceRecords.EditModel

@{
    ViewData["Title"] = "编辑";
}


<div class="card">
    <div class="card-header">
        <h4>使用记录</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MaintenanceRecord.Id" />
                    <div class="form-group">
                        <label asp-for="MaintenanceRecord.ProjectName" class="control-label"></label>
                        <input asp-for="MaintenanceRecord.ProjectName" class="form-control" readonly />
                        <span asp-validation-for="MaintenanceRecord.ProjectName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaintenanceRecord.InstrumentId" class="control-label"></label>
                        <input asp-for="MaintenanceRecord.InstrumentId" class="form-control" readonly />
                        <span asp-validation-for="MaintenanceRecord.InstrumentId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaintenanceRecord.BeginTime" class="control-label"></label>
                        <input asp-for="MaintenanceRecord.BeginTime" class="form-control" />
                        <span asp-validation-for="MaintenanceRecord.BeginTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaintenanceRecord.EndTime" class="control-label"></label>
                        <input asp-for="MaintenanceRecord.EndTime" class="form-control" />
                        <span asp-validation-for="MaintenanceRecord.EndTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaintenanceRecord.Type" class="control-label"></label>
                        <input asp-for="MaintenanceRecord.Type" class="form-control" />
                        <span asp-validation-for="MaintenanceRecord.Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaintenanceRecord.Content" class="control-label"></label>
                        <input asp-for="MaintenanceRecord.Content" class="form-control" />
                        <span asp-validation-for="MaintenanceRecord.Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaintenanceRecord.Operator" class="control-label"></label>
                        <input asp-for="MaintenanceRecord.Operator" class="form-control" />
                        <span asp-validation-for="MaintenanceRecord.Operator" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="保存" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col-4">
                <a asp-page="../Index">返回</a>
                <a class="float-right" asp-page="./Delete" asp-route-id="@Model.MaintenanceRecord.Id">删除</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
