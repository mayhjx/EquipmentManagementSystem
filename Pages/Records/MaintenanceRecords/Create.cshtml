@page
@inject UserManager<User> UserManager
@model EquipmentManagementSystem.Pages.MaintenanceRecords.CreateModel

@{
    ViewData["Title"] = "新建";
}


<div class="card">
    <div class="card-header">
        <h4>维护登记</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="row">
                <div class="col-12 col-xl-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="MaintenanceRecord.ProjectName" class="control-label"></label>
                        <select id="project" asp-for="MaintenanceRecord.ProjectName" class="form-control select2" asp-items="@Model.ProjectsSelectList">
                            <option value="">---请选择---</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaintenanceRecord.InstrumentId" class="control-label"></label>
                        <select id="instrumentId" asp-for="MaintenanceRecord.InstrumentId" class="form-control select2" disabled></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaintenanceRecord.BeginTime" class="control-label"></label>
                        <input asp-for="MaintenanceRecord.BeginTime" class="form-control" />
                        <span asp-validation-for="MaintenanceRecord.BeginTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaintenanceRecord.EndTime" class="control-label"></label>
                        <input asp-for="MaintenanceRecord.EndTime" class="form-control" />
                        <span asp-validation-for="MaintenanceRecord.EndTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaintenanceRecord.Operator" class="control-label"></label>
                        @{
                            var user = await UserManager.GetUserAsync(User);
                        }
                        <input asp-for="MaintenanceRecord.Operator" value="@user?.Name" class="form-control" />
                        <span asp-validation-for="MaintenanceRecord.Operator" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-xl-4 offset-xl-1">
                    <div class="form-group">
                        <label asp-for="MaintenanceRecord.Type" class="control-label"></label>
                        <select asp-for="MaintenanceRecord.Type" class="form-control"></select>
                        <span asp-validation-for="MaintenanceRecord.Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaintenanceRecord.Content" class="control-label"></label>
                        <input asp-for="MaintenanceRecord.Content" class="form-control" />
                        <span asp-validation-for="MaintenanceRecord.Content" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <input type="submit" value="新建" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
        <div>
            <a asp-page="../Index">返回</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            $("#project").on("change", function () {
                var project = $(this).val();
                $("#instrumentId").removeAttr("disabled");
                $("#instrumentId").empty();
                //$("#instrumentId").append("<option value=''>---请选择---</option>");
                $.getJSON(`?handler=InstrumentFilter&projectName=${project}`, (data) => {
                    $.each(data, function (i, item) {

                        if (item.length > 0) {
                            $("#instrumentId").append(`<option value='${item}'>${item}</option>`);
                        }
                        else {
                            $("#instrumentId").empty();
                            $("#instrumentId").append("<option value=''>无可选设备</option>");
                        }
                    });
                });
            });
        });
    </script>
}
