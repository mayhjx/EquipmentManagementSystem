@page
@model EquipmentManagementSystem.Pages.Instruments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Instrument</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Instrument.ID" />
            <div class="form-group">
                <label asp-for="Instrument.CreatedDate" class="control-label"></label>
                <input asp-for="Instrument.CreatedDate" class="form-control" />
                <span asp-validation-for="Instrument.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrument.Platform" class="control-label"></label>
                <input asp-for="Instrument.Platform" class="form-control" />
                <span asp-validation-for="Instrument.Platform" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrument.SerialNumber" class="control-label"></label>
                <input asp-for="Instrument.SerialNumber" class="form-control" />
                <span asp-validation-for="Instrument.SerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrument.Name" class="control-label"></label>
                <input asp-for="Instrument.Name" class="form-control" />
                <span asp-validation-for="Instrument.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrument.Brand" class="control-label"></label>
                <input asp-for="Instrument.Brand" class="form-control" />
                <span asp-validation-for="Instrument.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrument.Model" class="control-label"></label>
                <input asp-for="Instrument.Model" class="form-control" />
                <span asp-validation-for="Instrument.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrument.StartUsingDate" class="control-label"></label>
                <input type="date" asp-for="Instrument.StartUsingDate" class="form-control" />
                <span asp-validation-for="Instrument.StartUsingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrument.CalibrationCycle" class="control-label"></label>
                <input asp-for="Instrument.CalibrationCycle" class="form-control" />
                <span asp-validation-for="Instrument.CalibrationCycle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrument.Status" class="control-label"></label>
                <select asp-for="Instrument.Status" class="form-control">
                    <option value="0">使用中</option>
                    <option value="1">故障中</option>
                    <option value="2">报废</option>
                </select>
                <span asp-validation-for="Instrument.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrument.Location" class="control-label"></label>
                <input asp-for="Instrument.Location" class="form-control" />
                <span asp-validation-for="Instrument.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrument.Remark" class="control-label"></label>
                <input asp-for="Instrument.Remark" class="form-control" />
                <span asp-validation-for="Instrument.Remark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
