@page
@model EquipmentManagementSystem.Pages.Instruments.DetailsModel

@{
    ViewData["Title"] = "详细信息";
}

    <div class="invoice p-3 mb-3">
        <!-- title row -->
        <div class="row">
            <div class="col-12">
                <h3>
                    @Html.DisplayFor(mdoel => Model.Instrument.ID)
                    @{
                        var status = Model.Instrument.Status.ToString();
                        if (status == "Using")
                        {
                            <small class="bg-green">正常</small>
                        }
                        else if (status == "Malfunction")
                        {
                            <small class="bg-yellow">故障</small>
                        }
                        else if (status == "StopUsing")
                        {
                            <small class="bg-yellow">停用</small>
                        }
                        else if (status == "Allocate")
                        {
                            <small class="bg-red">调拨</small>
                        }
                        else if (status == "Scrapped")
                        {
                            <small class="bg-red">报废</small>
                        }
                    }
                    <small class="float-right">@Html.DisplayNameFor(model => model.Instrument.StartUsingDate): @Html.DisplayFor(model => model.Instrument.StartUsingDate)</small>
                </h3>
            </div>
            <!-- /.col -->
        </div>
        <br />
        <!-- info row -->
        <div class="row">
            <div class="col-md-4">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            基础信息
                        </h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-sm">
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Instrument.Platform)</td>
                                <td>@Html.DisplayFor(model => model.Instrument.Platform)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Instrument.Name)</td>
                                <td>@Html.DisplayFor(model => model.Instrument.Name)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Instrument.CalibrationCycle)</td>
                                <td>@Html.DisplayFor(model => model.Instrument.CalibrationCycle)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Instrument.MetrologicalCharacteristics)</td>
                                <td>@Html.DisplayFor(model => model.Instrument.MetrologicalCharacteristics)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Instrument.Location)</td>
                                <td>@Html.DisplayFor(model => model.Instrument.Location)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Instrument.Principal)</td>
                                <td>@Html.DisplayFor(model => model.Instrument.Principal)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Instrument.ProjectTeamName)</td>
                                <td>@Html.DisplayFor(model => model.Instrument.ProjectTeamName)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Instrument.NewSystemCode)</td>
                                <td>@Html.DisplayFor(model => model.Instrument.NewSystemCode)</td>
                            </tr>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>

            <div class="col-md-8">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            校准信息<a asp-page="../Calibrations/Create">（新建）</a>
                        </h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Instrument.calibrations.First().Date)</th>
                                <th>@Html.DisplayNameFor(model => model.Instrument.calibrations.First().Unit)</th>
                                <th>@Html.DisplayNameFor(model => model.Instrument.calibrations.First().Result)</th>
                                <th>@Html.DisplayNameFor(model => model.Instrument.calibrations.First().Calibrator)</th>
                                <th></th>
                            </tr>
                            @foreach (var item in Model.Instrument.calibrations)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Unit)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Result)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Calibrator)</td>
                                    <td>
                                        <a asp-page="../Calibrations/Edit" asp-route-id="@item.ID">编辑</a> |
                                        @*<a asp-page="../Calibrations/Details" asp-route-id="@item.ID">Details</a> |*@
                                        <a asp-page="../Calibrations/Delete" asp-route-id="@item.ID">删除</a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
        <!-- /.row -->
        <!-- Table row -->
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            部件信息<a asp-page="../Components/Create">（新建）</a>
                        </h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Instrument.components.First().Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Instrument.components.First().Brand)</th>
                                <th>@Html.DisplayNameFor(model => model.Instrument.components.First().Model)</th>
                                <th>@Html.DisplayNameFor(model => model.Instrument.components.First().SerialNumber)</th>
                                <th></th>
                            </tr>
                            @foreach (var item in Model.Instrument.components)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Brand)</td>
                                <td>@Html.DisplayFor(modelItem => item.Model)</td>
                                <td>@Html.DisplayFor(modelItem => item.SerialNumber)</td>
                                <td>
                                    <a asp-page="../Components/Edit" asp-route-id="@item.ID">编辑</a> |
                                    @*<a asp-page="../Components/Details" asp-route-id="@item.ID">详情</a> |*@
                                    <a asp-page="../Components/Delete" asp-route-id="@item.ID">删除</a>
                                </td>
                            </tr>
                            }
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>

            <div class="col-md-6">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            故障信息<a asp-page="../Malfunctions/Create">（新建）</a>
                        </h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Instrument.malfunctions.First().FoundTime)</th>
                                <th>@Html.DisplayNameFor(model => model.Instrument.malfunctions.First().Problem)</th>
                                <th>@Html.DisplayNameFor(model => model.Instrument.malfunctions.First().DebuggingTime)</th>
                                <th>@Html.DisplayNameFor(model => model.Instrument.malfunctions.First().FollowUpPeople)</th>
                                <th></th>
                            </tr>
                            @foreach (var item in Model.Instrument.malfunctions)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.FoundTime)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Problem)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DebuggingTime)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FollowUpPeople)</td>
                                    <td>
                                        <a asp-page="../Malfunctions/Edit" asp-route-id="@item.ID">编辑</a> |
                                        <a asp-page="../Malfunctions/Details" asp-route-id="@item.ID">详情</a> |
                                        <a asp-page="../Malfunctions/Delete" asp-route-id="@item.ID">删除</a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>

        </div>
        <!-- /.row -->

        <div class="row">
            <div class="col-12">
                <p class="lead">备注</p>
                @Html.DisplayFor(model => model.Instrument.Remark)
            </div>
            <!-- /.col -->
        </div>
        <br />
        <!-- /.row -->
        <!-- this row will not appear when printing -->
        <div class="row no-print">
            <div class="col-12">
                @*<a href="invoice-print.html" target="_blank" class="btn btn-default float-right"><i class="fas fa-print"></i> 打印</a>*@
                <div>
                    <a asp-page="./Edit" asp-route-id="@Model.Instrument.ID">
                        <input type="button" class="btn btn-primary" value="编辑">
                    </a>

                    <a asp-page="./Index">
                        <input type="button" class="btn btn-default" value="返回" style="margin-left: 5px;">
                    </a>

                    <button onclick="javescript:window.print()" type="button" class="btn btn-primary float-right" style="margin-right: 5px;">
                        <i class="fas fa-download"></i> Generate PDF
                    </button>
                </div>
            </div>
        </div>
    </div>
