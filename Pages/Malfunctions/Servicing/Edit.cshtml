@page
@model EquipmentManagementSystem.Pages.Malfunctions.Servicing.EditModel

@{
    ViewData["Title"] = "编辑";
}

<div class="card">
    <div class="card-header">
        <h4>故障维修</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Repair.ID" />
                    <div class="form-group">
                        <label asp-for="Repair.BeginTime" class="control-label"></label>
                        <input asp-for="Repair.BeginTime" class="form-control" required />
                        <span asp-validation-for="Repair.BeginTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Repair.EndTime" class="control-label"></label>
                        <input asp-for="Repair.EndTime" class="form-control" required />
                        <span asp-validation-for="Repair.EndTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Repair.Repairer" class="control-label"></label>
                        <input asp-for="Repair.Repairer" class="form-control" required />
                        <span asp-validation-for="Repair.Repairer" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                            <label asp-for="Repair.Solution" class="control-label"></label>
                            <input asp-for="Repair.Solution" class="form-control" required />
                            <span asp-validation-for="Repair.Solution" class="text-danger"></span>
                        </div>*@
                    <div class="form-group">
                        <label asp-for="Repair.Solution" class="control-label"></label>
                        <select asp-for="Repair.Solution" class="custom-select select2" asp-items="@Model.SolutionSelectList" required>
                            <option value="">---请选择---</option>
                        </select>
                        <span asp-validation-for="Repair.Solution" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="icheck-primary">
                            <input type="checkbox" asp-for="Repair.IsCritical" id="check" />
                            <label for="check">
                                @Html.DisplayNameFor(model => model.Repair.IsCritical)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Repair.FileName" class="control-label"></label>
                        （提示：再次上传时会覆盖原有附件）
                        <input type="file" asp-for="FileUpload.FormFile" class="form-control-file" />
                        <span asp-validation-for="FileUpload.FormFile" class="text-danger"></span>
                        <h6>已上传附件：@Html.DisplayFor(model => model.Repair.FileName)</h6>
                    </div>
                    <div class="form-group">
                        <label asp-for="Repair.Remark" class="control-label"></label>
                        <textarea asp-for="Repair.Remark" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Repair.Remark" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="保存" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="../WorkOrders/Details" asp-route-id="@Model.Repair.MalfunctionWorkOrderID">返回</a>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
