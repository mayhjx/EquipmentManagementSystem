@page
@model EquipmentManagementSystem.Pages.Malfunctions.WorkOrders.DetailsModel

@{
    ViewData["Title"] = "详细信息";
    // 故障信息是否确认
    var MalfunctionIsComfirm = Model.MalfunctionWorkOrder.MalfunctionInfo != null && Model.MalfunctionWorkOrder.MalfunctionInfo.IsConfirm ? true : false;
    // 维修申请是否确认
    var RepairRequestIsComfirm = Model.MalfunctionWorkOrder.RepairRequest != null && Model.MalfunctionWorkOrder.RepairRequest.IsConfirm ? true : false;
    // 性能验证是否确认
    var ValidationIsComfirm = Model.MalfunctionWorkOrder.Validation != null && Model.MalfunctionWorkOrder.Validation.IsConfirm ? true : false;

    var IsCompleted = MalfunctionIsComfirm && RepairRequestIsComfirm && ValidationIsComfirm;

    // 是否为关键部位故障
    var MaintainIsCritical = Model.MalfunctionWorkOrder.Maintenance != null && Model.MalfunctionWorkOrder.Maintenance.IsCritical ? true : false;
}


<div class="invoice p-3 mb-3">
    <!-- title row -->
    <div class="row">
        <div class="col-md-6">
            <ul class="list-inline">
                <li class="list-inline-item">
                    <h3>
                        @Html.DisplayFor(mdoel => Model.MalfunctionWorkOrder.InstrumentID)
                        <span class="badge badge-primary">@Html.DisplayFor(mdoel => Model.MalfunctionWorkOrder.Progress)</span>
                    </h3>
                </li>
            </ul>
        </div>
        <div class="col-md-6">
            <ul class="list-unstyled text-right">
                <li>
                    @Html.DisplayNameFor(mdoel => Model.MalfunctionWorkOrder.Creator)：
                    @Html.DisplayFor(mdoel => Model.MalfunctionWorkOrder.Creator)
                </li>
                <li>
                    @Html.DisplayNameFor(mdoel => Model.MalfunctionWorkOrder.CreatedTime)：
                    @Html.DisplayFor(mdoel => Model.MalfunctionWorkOrder.CreatedTime)
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fa fa-info-circle" aria-hidden="true"></i> 故障信息

                        @if (MalfunctionIsComfirm)
                        {
                            <span class="badge badge-success" style="margin-left: 5px;">设备负责人已确认</span>
                        }
                        else
                        {
                            <span class="badge badge-warning" style="margin-left: 5px;">设备负责人未确认</span>
                        }
                    </h3>
                    <div class="card-tools">
                        <a asp-page="../Information/Edit" asp-route-id="@Model.MalfunctionWorkOrder.MalfunctionInfo.ID">
                            <input type="button" class="btn btn-outline-primary btn-xs" value="编辑">
                        </a>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.MalfunctionWorkOrder.MalfunctionInfo.BeginTime)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.MalfunctionWorkOrder.MalfunctionInfo.BeginTime)
                                </dd>
