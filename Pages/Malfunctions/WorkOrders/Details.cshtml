                                            @Html.DisplayFor(model => model.MalfunctionWorkOrder.RepairRequest.Engineer)
                                        </dd>
                                    </dl>
                                    <div class="card-footer">
                                        @if (!RepairRequestIsComfirm && CanEdit.Succeeded)
                                        {
                                            <a asp-page="../RepairRequests/Edit" asp-route-id="@Model.MalfunctionWorkOrder.RepairRequest.ID" class="btn btn-outline-primary">
                                                <i class="fas fa-edit"></i> 编辑
                                            </a>
                                        }
                                        @if (!RepairRequestIsComfirm && CanApprove.Succeeded)
