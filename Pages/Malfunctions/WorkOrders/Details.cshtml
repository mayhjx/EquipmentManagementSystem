                                    <input type="button" class="btn btn-outline-primary btn-sm" value="编辑">
                                </a>
                            </div>*@
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <dl class="row">
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.MalfunctionWorkOrder.Investigation.BeginTime)
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.MalfunctionWorkOrder.Investigation.BeginTime)
