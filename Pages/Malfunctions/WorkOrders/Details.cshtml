                                        <dd class="col-sm-8">
                                            @{
                                                if (MaintainIsCritical)
                                                {
                                                    <span class="badge badge-primary text-sm">是</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary text-sm">否</span>

                                                }
                                            }
                                        </dd>
                                    </dl>
                                </div>
