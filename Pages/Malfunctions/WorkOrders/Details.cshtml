@page
@inject UserManager<User> UserManager
@model EquipmentManagementSystem.Pages.Malfunctions.WorkOrders.DetailsModel

@{
    ViewData["Title"] = "详细信息";

    // 故障信息是否确认
    var InfomationIsComfirm = Model.MalfunctionWorkOrder.MalfunctionInfo?.IsConfirm ?? false;

    // 维修申请是否确认
    var RepairRequestIsComfirm = Model.MalfunctionWorkOrder.RepairRequest?.IsConfirm ?? false;

    // 是否可内部维修
    var InternalServiceable = Model.MalfunctionWorkOrder.Investigation?.Result == InvestigationResult.Internal;

    // 维修信息是否填写
    var MaintainIsComplete = Model.MalfunctionWorkOrder.Maintenance?.EndTime != null ? true : false;

    // 是否为关键部位故障
    var MaintainIsCritical = Model.MalfunctionWorkOrder.Maintenance?.IsCritical ?? false;

    // 性能验证是否确认
    var ValidationIsComfirm = Model.MalfunctionWorkOrder.Validation?.IsConfirm ?? false;

    // 所有确认环节已确认
    var IsComfirmAll = (InfomationIsComfirm && InternalServiceable && MaintainIsComplete && !MaintainIsCritical) ||
                        (InfomationIsComfirm && RepairRequestIsComfirm && MaintainIsComplete && !MaintainIsCritical) ||
                        (InfomationIsComfirm && RepairRequestIsComfirm && MaintainIsCritical && ValidationIsComfirm);

    // 工单是否完成
    var IsCompleted = Model.MalfunctionWorkOrder.Progress == Models.WorkOrderProgress.Completed;

    // 授权编辑
    var CanEdit = await AuthorizationService.AuthorizeAsync(User, Model.MalfunctionWorkOrder, Operations.Update);

    // 授权确认故障信息
    var CanComfirmInformation = await AuthorizationService.AuthorizeAsync(User, Model.MalfunctionWorkOrder, Operations.Comfirm);

    // 授权批准
    var CanApprove = await AuthorizationService.AuthorizeAsync(User, Model.MalfunctionWorkOrder, Operations.Approve);
}

