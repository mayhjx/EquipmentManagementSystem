@page
@model IndexModel
@{
    ViewData["Title"] = "看板";
}

<div class="row">
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@Model.InstrumentNumber</h3>

                <p>主检设备</p>
            </div>
            <div class="icon">
                <i class="fas fa-server"></i>
            </div>
            <a asp-page="Instruments/Index" class="small-box-footer">查看 <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-success">
            <div class="inner">
                <h3>0</h3>

                <p>辅助设备</p>
            </div>
            <div class="icon">
                <i class="fas fa-cube"></i>
            </div>
            <a href="#" class="small-box-footer">查看 <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@Model.InstrumentOfExpire.Count</h3>

                <p>需校准设备</p>
            </div>
            <div class="icon">
                <i class="fas fa-balance-scale-left"></i>
            </div>
            <a href="#" class="small-box-footer">查看 <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@Model.MalfunctionWorkOrderOfFollow.Count</h3>

                <p>需跟进工单</p>
            </div>
            <div class="icon">
                <i class="fas fa-star"></i>
            </div>
            <a href="Malfunctions/WorkOrders/Doing" class="small-box-footer">查看 <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
</div>



<div class="row">
    <div class="col-md-4">
        <div class="card height-control">
            <div class="card-header">
                <h3 class="card-title">
                    需校准设备
                </h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.InstrumentOfExpire[0].ID)
                            </th>
                            <th>
                                到期日期
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InstrumentOfExpire[0].Group)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.InstrumentOfExpire)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ID)
                                </td>

                                <td>
                                    @if (item.Calibrations != null)
                                    {
                                        var lastCalibrationDateTime = item.Calibrations.Last().Date;
                                        if (lastCalibrationDateTime != null)
                                        {
                                            @(lastCalibrationDateTime.AddYears(item.CalibrationCycle).AddDays(-1).ToShortDateString())
                                        }
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Group)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
</div>
