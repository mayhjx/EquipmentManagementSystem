@page
@model IndexModel
@{
    ViewData["Title"] = "看板";
}

<div class="row">
    <div class="col-md-4">
        <div class="card card-warning card-outline height-control">
            <div class="card-header">
                <h3 class="card-title">
                    需校准设备
                </h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.InstrumentOfExpire[0].ID)
                            </th>
                            <th>
                                到期日期
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InstrumentOfExpire[0].ProjectTeamName)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.InstrumentOfExpire)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ID)
                                </td>

                                <td>
                                    @if (item.Calibrations != null)
                                    {
                                        var lastCalibrationDateTime = item.Calibrations.Last().Date;
                                        if (lastCalibrationDateTime != DateTime.Parse("0001-01-01"))
                                        {
                                            @(lastCalibrationDateTime.AddYears(item.CalibrationCycle).AddDays(-1).ToShortDateString())
                                        }
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProjectTeamName)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-warning card-outline height-control">
            <div class="card-header">
                <h3 class="card-title">
                    需跟进工单
                </h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MalfunctionWorkOrder[0].InstrumentID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MalfunctionWorkOrder[0].Progress)
                            </th>
                            <th>
                                故障描述
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.MalfunctionWorkOrder)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InstrumentID)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Progress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MalfunctionInfo.Part)@Html.DisplayFor(modelItem => item.MalfunctionInfo.Phenomenon)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
</div>
