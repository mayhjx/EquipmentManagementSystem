<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>设备管理平台</title>

    <!-- AdminLTE Font Awesome Icons -->
    @*<link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">*@
    <link rel="stylesheet" href="~/plugins/font-awesome-4.7.0/font-awesome-4.7.0/css/font-awesome.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="../../plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="../../plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <!-- pace-progress -->
    <link rel="stylesheet" href="../../plugins/pace-progress/themes/black/pace-theme-minimal.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
</head>
<body class="hold-transition sidebar-mini pace-primary">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fa fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-page="/Index" class="nav-link"> Home</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-page="/Manual" class="nav-link">使用说明</a>
                </li>
            </ul>
            <partial name="_LoginPartial" />

            <!-- SEARCH FORM -->
            @*<form class="form-inline ml-3">
                    <div class="input-group input-group-sm">
                        <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-navbar" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>*@
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-page="/Index" class="brand-link">
                <img src="~/dist/img/AdminLTELogo.png" alt="Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">设备管理平台</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar nav-child-indent flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->
                        <li class="nav-item has-treeview">
                            <a href="#Instruments" data-target="#" data-toggle="pill" class="nav-link">
                                <i class="nav-icon fa fa-tachometer"></i>
                                <p>
                                    设备档案
                                    <i class="right fa fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-page="/Equipments/Instruments/Index" class="nav-link">
                                        <i class="nav-icon fa fa-circle-o"></i>
                                        <p>主检设备</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="fa fa-circle-o nav-icon"></i>
                                        <p>辅助设备</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="#Instruments" data-target="#" data-toggle="pill" class="nav-link">
                                <i class="nav-icon fa fa-wrench"></i>
                                <p>
                                    故障跟进
                                    <i class="right fa fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-page="/Malfunctions/WorkOrders/Doing" class="nav-link">
                                        <i class="fa fa-circle-o nav-icon"></i>
                                        <p>待跟进工单</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Malfunctions/WorkOrders/Done" class="nav-link">
                                        <i class="fa fa-circle-o nav-icon"></i>
                                        <p>已完成工单</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a asp-page="/UsageRecords/Index" class="nav-link">
                                <i class="nav-icon fa fa-edit"></i>
                                <p>
                                    维护使用
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/ReportSystem/Reporting" class="nav-link">
                                <i class="nav-icon fa fa-file-text"></i>
                                <p>
                                    报表系统
                                </p>
                            </a>
                        </li>
                        <partial name="_AdminActionsPartial" />
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <h5 class="m-0 text-dark">@ViewData["Title"]</h5>
                        </div>
                        @*<div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                                    <li class="breadcrumb-item active">Starter Page</li>
                                </ol>
                            </div>*@
                    </div>
                </div>
            </section>

            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            @RenderBody()
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        @*<aside class="control-sidebar control-sidebar-dark">

                <div class="p-3">
                    <h5>Title</h5>
                    <p>Sidebar content</p>
                </div>
            </aside>*@
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer d-print-none">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                v1.0
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; 2020 <a asp-area="" asp-page="/"> All rights reserved.</a></strong>
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Select2 -->
    <script src="../../plugins/select2/js/select2.full.min.js"></script>
    <!-- pace-progress -->
    <script src="../../plugins/pace-progress/pace.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <!-- JQuery dataTable -->
    <script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>

    <!-- Self Define -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
