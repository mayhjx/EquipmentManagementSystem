                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.User" class="control-label"></label>
                        @{
                            var user = await UserManager.GetUserAsync(User);
                        }
                        <input asp-for="UsageRecord.User" value="@user?.Name" class="form-control" required />
                        <span asp-validation-for="UsageRecord.User" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.Remark" class="control-label"></label>
                        <textarea asp-for="UsageRecord.Remark" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="UsageRecord.Remark" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="新建" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="../Index">返回</a>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Records.js" asp-append-version="true"></script>
    <script>
        $('button#fill-latest-record').on('click', function (e) {
            e.preventDefault();
            var projectName = $("#project").val();
            var instrumentId = $("#instrumentId").val();
            $.getJSON(`?handler=FillLatestRecord&projectName=${projectName}&instrumentId=${instrumentId}`,
                (data) => {
                    console.log(data);
                });
        });
    </script>
}
