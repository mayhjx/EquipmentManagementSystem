        <div class="row">
            <div class="col-12 col-xl-3">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.ProjectName" class="control-label"></label>
                        <select id="project" asp-for="UsageRecord.ProjectName" class="form-control select2" asp-items="@Model.ProjectsSelectList" required>
                            <option value="">---请选择---</option>
                        </select>
                        <span asp-validation-for="UsageRecord.ProjectName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.InstrumentId" class="control-label"></label>
                        <select id="instrumentId" asp-for="UsageRecord.InstrumentId" class="form-control select2" disabled>
                        </select>
                        <span asp-validation-for="UsageRecord.InstrumentId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button id="fill-latest-record" class="btn btn-primary">填充最新记录</button>
                    </div>

