                        </div>*@
                    <div class="form-group">
                        <label asp-for="UsageRecord.BeginTime" class="control-label"></label>
                        <input asp-for="UsageRecord.BeginTime" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                        <span asp-validation-for="UsageRecord.BeginTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.ClinicSampleNumber" class="control-label"></label>
                        <input asp-for="UsageRecord.ClinicSampleNumber" class="form-control" />
                        <span asp-validation-for="UsageRecord.ClinicSampleNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsageRecord.BatchSampleNumber" class="control-label"></label>
                        <input asp-for="UsageRecord.BatchSampleNumber" class="form-control" />
                        <span asp-validation-for="UsageRecord.BatchSampleNumber" class="text-danger"></span>
                    </div>
